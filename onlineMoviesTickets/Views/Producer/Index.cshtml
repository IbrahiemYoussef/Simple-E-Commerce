@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List of actors";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>ProfilePicture</th>
                    <th>Name</th>
                    <th>Bio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ProfilePictureURL" class="rounded-circle" alt="@item.FullName" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" ><i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-outline-info" ><i class="bi bi-pencil-square">Details</i></a>
                            <a class="btn btn-outline-danger" ><i class="bi bi-pencil-square">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>